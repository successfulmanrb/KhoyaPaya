<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/level12main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sunflowerdown"
        android:background="@drawable/sunflowerdown"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sunflowermiddle"
        android:background="@drawable/sunflowermiddle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sunflowerup"
        android:background="@drawable/sunflowerup"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bloom the sunflower"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:id="@+id/textView8"
        android:layout_below="@+id/sunflowermiddle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sun"
        android:background="@drawable/sun"
        android:layout_alignBottom="@+id/cloud"
        android:layout_toLeftOf="@+id/sunflowerdown"
        android:layout_toStartOf="@+id/sunflowerdown"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/cloud"
        android:background="@drawable/cloudnn"
        android:layout_above="@+id/sunflowerdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/cloud2"
        android:background="@drawable/cloudnn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView8"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/imageView4"
        android:background="@drawable/cloudnn"
        android:layout_below="@+id/sunflowermiddle"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/sunflowerdown"
        android:visibility="gone"/>

</RelativeLayout>