<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.myvision.khoyapaya.HomeActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/green"
        android:layout_width="180dp"
        android:layout_height="0dp"

        app:srcCompat="@drawable/green"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/blue"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/khoyapayatv"
        android:layout_marginBottom="49dp" />

    <TextView
        android:id="@+id/khoyapayatv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:typeface="sans"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:textSize="30dp"
        android:text="KhoyaPaya"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="89dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="80dp" />

    <ImageView
        android:id="@+id/yellow"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/yellow"
        android:layout_marginEnd="2dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/green"
        app:layout_constraintRight_toRightOf="@+id/red"
        app:layout_constraintTop_toBottomOf="@+id/green"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/red"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/blue"
        android:layout_marginStart="19dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="245dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:id="@+id/red"
        android:layout_width="190dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/red"
        android:layout_marginEnd="19dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/blue"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@+id/blue"
        android:layout_marginRight="19dp" />


</android.support.constraint.ConstraintLayout>
